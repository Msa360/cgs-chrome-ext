{
    "manifest_version": 3,
    "name": "CSFOY GYM STEALER",
    "version": "1.0.0",
    "action": {
      "default_title": "CGS",   
      "default_popup": "popup.html"  
    },
    
    "description": "Override gym reservations at CSFOY.",

    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": ["https://scop.cegep-ste-foy.qc.ca/booked/Web/reservation.php?rn=*"],
            "js": ["content-script.js"],
            "run_at": "document_end"
        }
    ],

    "host_permissions": ["<all_urls>"],
    
    "permissions": [
        "storage"
    ]
}